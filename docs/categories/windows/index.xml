	srcset=&#34;../../post/proxmox-windows11-hyper-v-1/14_hu_89647635f2439d9d.png 480w, ../../post/proxmox-windows11-hyper-v-1/14_hu_71102e3428987fc9.png 1024w&#34;
	loading=&#34;lazy&#34;
	
	
		class=&#34;gallery-image&#34; 
